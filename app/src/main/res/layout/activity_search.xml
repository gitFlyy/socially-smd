<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/status_bar_space"
        android:background="@color/white"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/roundedge_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_search"
                android:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/searchCameraIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_camera"
                android:tint="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filter_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/search_section"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/roundedge_button"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Style"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/roundedge_button"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Sports"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/roundedge_button"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Auto"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/roundedge_button"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Music"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filter_tabs"
        android:layout_above="@id/bottom_navigation"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="4dp">

                <ImageView
                    android:id="@+id/searchImage1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search1"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search2"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search3"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search4"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage5"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_corner_8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <ImageView
                    android:id="@+id/searchImage6"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search6"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage7"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search7"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage8"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search8"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search9"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage10"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search10"
                    android:background="@drawable/rounded_corner_8dp" />

                <ImageView
                    android:id="@+id/searchImage11"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search11"
                    android:background="@drawable/rounded_corner_8dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_outline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_filled" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favoritesButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ball_big_purple" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>