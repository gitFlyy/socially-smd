<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header with tabs -->
    <LinearLayout
        android:id="@+id/header_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tab_following"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Following"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tab_you"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="You"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <!-- Underline for active tab (You) -->
    <View
        android:id="@+id/tab_underline"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_below="@id/header_tabs"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:background="#000000" />

    <!-- Follow Requests Header -->
    <TextView
        android:id="@+id/follow_requests_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_underline"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:text="Follow Requests"
        android:textSize="16sp"
        android:textColor="@color/brownRed"
        android:textStyle="bold" />

    <!-- ScrollView for notifications -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/follow_requests_header"
        android:layout_above="@+id/bottom_navigation"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- New Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- karennnne liked your photo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_pic_karen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ball_big_orange"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/notification_text_karen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_pic_karen"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="karennnne liked your photo. 1h"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/liked_photo_karen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search5"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <!-- Today Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- kiero_d, zackjohn and 26 others liked your photo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_pic_kiero"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ball_big_purple"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/notification_text_kiero"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_pic_kiero"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="kiero_d, zackjohn and 26 others liked your photo. 3h"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/liked_photo_kiero"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search1"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <!-- This Week Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- craig_love mentioned you in comment -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_pic_craig"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ball_big_orange"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_pic_craig"
                    android:layout_toStartOf="@id/mentioned_photo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a comment: @jacob_w exactly.. 2d"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reply"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/mentioned_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search8"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <!-- martini_rond started following you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_pic_martini"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ball_big_purple"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/notification_text_martini"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_pic_martini"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="martini_rond started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_martini"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/roundedge_brownred" />

            </RelativeLayout>

            <!-- maxjacobson started following you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_pic_max"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ball_big_orange"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/notification_text_max"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_pic_max"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="maxjacobson started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_message_max"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/roundedge_brownred" />

            </RelativeLayout>

            <!-- mis_potter started following you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/profile_pic_potter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ball_big_purple"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/notification_text_potter"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_pic_potter"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="mis_potter started following you. 3d"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_follow_potter"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/roundedge_brownred" />

            </RelativeLayout>

            <!-- This Month Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home_outline"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/nav_add"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_heart_filled"
            android:layout_gravity="center"
            app:tint="@color/brownRed" />

        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ball_big_orange"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>